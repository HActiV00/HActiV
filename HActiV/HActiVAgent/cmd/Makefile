# Makefile for building the HActiV project

# Default target
build:
	@echo "Building HActiV..."
	go build -o HActiV
	@echo "Build complete: HActiV created"

# Clean target to remove the binary
clean:
	@echo "Cleaning up..."
	rm -f HActiV
	@echo "Cleanup complete"

# Help target to display available commands
help:
	@echo "Available commands:"
	@echo "  make build  - Build the HActiV binary"
	@echo "  make clean  - Remove the HActiV binary"
	@echo "  make help   - Show this help message"
	
